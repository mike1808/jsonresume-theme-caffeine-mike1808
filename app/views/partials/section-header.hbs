<div class="section-header">
    {{#if name}}
        <h4 class="bold {{nameClass}}">
        {{#if website}}
            <a href="{{website}}" target="_blank">
                {{name}} <i class="fa fa-external-link" aria-hidden="true"></i>
            </a>
        {{else}}
            {{name}}
        {{/if}}
        </h4>
    {{#if location }}
        <h5 class="italic section-header__location">
            <span> â€” </span>
            {{location}}
        </h5>
    {{/if}}
    {{/if}}
    <h5 class="italic section-header__date">
        {{#if startDate}}
            <span class="startDate">{{formatDate startDate dateFormat}}</span>
            {{#if endDate}}
            <span class="endDate"> - {{formatDate endDate dateFormat}}</span>
            {{else}}
            <span class="endDate"> - Present</span>
            {{/if}}
        {{else if releaseDate}}
            {{formatDate releaseDate}}
        {{/if}}
    </h5>
</div>
